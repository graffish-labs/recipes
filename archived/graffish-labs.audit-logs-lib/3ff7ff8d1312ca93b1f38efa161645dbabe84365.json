{
    "manifests": {
        "graffish-labs/audit-logs-lib": {
            "manifest": {
                "bundles": {
                    "GraffishLabs\\AuditLogsLib\\GraffishLabsAuditLogsLibBundle": [
                        "all"
                    ]
                },
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "env": {
                    "AUDIT_LOGS_API_KEY": "your-api-key-here",
                    "AUDIT_LOGS_API_BASE_URL": "https://audit-logs.graffish.com/api/v1"
                },
                "post-install-output": [
                    "  * Modify your AUDIT_LOGS_API_KEY and AUDIT_LOGS_API_BASE_URL config in <fg=green>.env</>"
                ]
            },
            "files": {
                "config/packages/audit_logs.yaml": {
                    "contents": [
                        "audit_logs:",
                        "    enabled: true",
                        "    client:",
                        "        base_uri: '%env(AUDIT_LOGS_API_BASE_URL)%'",
                        "        api_key: '%env(AUDIT_LOGS_API_KEY)%'"
                    ],
                    "executable": false
                }
            },
            "ref": "3ff7ff8d1312ca93b1f38efa161645dbabe84365"
        }
    }
}
